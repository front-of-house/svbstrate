import * as s from "../";

declare module "../" {
  interface Tokens {
    color: {
      primary: "#ff4567";
      secondary: "#ff4567";
    };
    other: [0, 1, 2];
  }

  interface Shorthands extends s.PresetShorthands {}

  interface Macros {}

  interface Variants {
    btn: "primary" | "secondary";
  }
}

const theme = s.createTheme({
  tokens: {
    other: [0, 1, 2],
    color: {
      primary: "#ff4567",
      secondary: "#ff4567",
    },
    space: [0, 4, 8, 12, 16, 20, 24, 28, 32, 36, 40, 44, 48, 52, 56, 60, 64],
